%h2.heading-large
  = "Tasks for #{current_month}"

%table
  %thead
    %tr
      %th{ scope: 'col' } Description
      %th{ scope: 'col' } Due
  %tbody
    - if @tasks
      - @tasks.each do |task|
        %tr
          %th
            = task.description
          %td
            = task.due_on

= link_to t('.completed_return'), upload_task_path(id: temp_task_id)
= ' or'
= link_to t('.nil_return'), nil_task_path(id: temp_task_id)
