.grid-row.task-row
  .column-one-third.task-details
    %h3.heading-medium
      = task.description
    %p
      Complete by
      = task.due_on
  .column-two-thirds.task-controls
    .grid-row
      .column-one-third
        = link_to 'Download template', framework_template_url_for(task_id: task.id), class: 'button button-secondary'
      .column-one-third
        = link_to 'Upload submission', new_task_submission_path(task_id: task.id), class: 'button'
      .column-one-third
        = link_to 'Report no business', new_task_submission_path(task_id: task.id, type: 'nil_return'), class: 'button'
        %span.button-hint
          Previously called nil return