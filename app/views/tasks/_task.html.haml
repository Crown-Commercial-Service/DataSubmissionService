.grid-row.task-row
  .column-one-third.task-details
    %h2.heading-medium
      = task.description
    %p
      = task_status(task)

  - case task.status
  - when 'completed'
    .column-two-thirds.task-controls
  - when 'in_progress'
    .column-two-thirds.task-controls
      = link_to 'Download template', framework_template_url_for(task_id: task.id), class: 'button button-secondary'
  - else
    .column-two-thirds.task-controls
      = link_to 'Download template', framework_template_url_for(task_id: task.id), class: 'button button-secondary'
      = link_to 'Upload submission', new_task_submission_path(task_id: task.id), class: 'button'
      = link_to 'Submit nil return', new_task_submission_path(task_id: task.id, type: 'nil_return'), class: 'button'

