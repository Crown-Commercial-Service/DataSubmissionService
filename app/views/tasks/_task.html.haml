.grid-row.task-row{id: "task-#{task.id}"}
  .column-one-third.task-details
    %h2.heading-medium
      = task.description
    %p
      = task_status(task)

  - case task.status
  - when 'completed'
    .column-two-thirds.task-controls
  - when 'in_progress'
    .column-two-thirds.task-controls
      .grid-row
        .column-one-third
          = link_to 'Download template', framework_template_path_for(task), class: 'button button-secondary'
        .column-two-third
          = link_to 'View submission status', task_submission_path(task_id: task.id, id: task.latest_submission.id), class: 'button'
  - else
    .column-two-thirds.task-controls
      .grid-row
        .column-one-third
          = link_to 'Download template', framework_template_path_for(task), class: 'button button-secondary'
        .column-one-third
          = link_to 'Upload submission', new_task_submission_path(task_id: task.id), class: 'button'
        .column-one-third
          = link_to 'Report no business', new_task_no_business_path(task_id: task.id), class: 'button'
          %span.button-hint
            Previously called nil return
