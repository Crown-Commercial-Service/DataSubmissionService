  .govuk-grid-column-full
    = link_to 'Back', tasks_path, { class: 'govuk-back-link', title: 'Back to your tasks' }

    %h1.govuk-heading-l
      Checking fileâ€¦

    = render 'shared/task_signpost', task: @task

    %div{ 'aria-live': 'polite' }
