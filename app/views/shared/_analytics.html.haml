- tracking_id = ENV['GOOGLE_ANALYTICS_ID']
- GA4_tracking_id = ENV['GOOGLE_ANALYTICS_4_ID']
- return unless tracking_id.present?
- return unless GA4_tracking_id.present?

%script{ async: true, src: "https://www.googletagmanager.com/gtag/js?id=#{tracking_id}" }

:javascript
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', "#{tracking_id}");
  gtag('config', "#{GA4_tracking_id}");
