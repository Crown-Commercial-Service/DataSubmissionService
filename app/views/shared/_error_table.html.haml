%table.govuk-table
  %thead.govuk-table__head
    %tr.govuk-table__row
      %th.govuk-table__cell
        Location
      %th.govuk-table__cell
        Help
  %tbody.govuk-table__body
    - errored_entries.each do |entry|
      - entry.validation_errors.each do |validation_error|
        %tr.govuk-table__row
          %td.govuk-table__cell
            %p
              = entry.source["sheet"]
            %p
              Column:
              = validation_error['location']['column']
              %br
              Row:
              = validation_error['location']['row']
          %td.govuk-table__cell
            = validation_error['message']
